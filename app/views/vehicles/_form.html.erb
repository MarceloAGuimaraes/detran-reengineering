<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">CRIAR VE√çCULO</h4>
      </div>
      <div class="card-body">
        <%= simple_form_for @vehicle, method: :post do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group bmd-form-group">
                <%= f.input :model, label: 'Modelo', as: :string, input_html: { maxlength: 300, minlength: 1 }, required: true %>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group bmd-form-group">
                <%= f.input :plate, label: 'Placa', as: :string, input_html: { maxlength: 300, minlength: 1 }, required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group bmd-form-group">
                <%= f.input :chassi, label: 'Chassi', as: :string, input_html: { maxlength: 300, minlength: 1 }, required: true %>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group bmd-form-group">
                <%= f.input :renavam, label: 'Renavam', as: :string, input_html: { maxlength: 300, minlength: 1 }, required: true %>
              </div>
            </div>
          </div>
          <%= f.submit "Criar", 'data-turbolinks': true, class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>