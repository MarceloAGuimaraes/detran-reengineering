<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">Fa√ßa o login!</h4>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          label: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", placeholder: "E-Mail" } %>
              <%= f.input :password,
                          label: false,
                          required: false,
                          input_html: { autocomplete: "current-password", placeholder: "Senha" } %>
            </div>
          <div class="form-actions">
            <%= f.button :submit, 'Login' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>